<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/BaseLayout" android:background="#004040">
    <FrameLayout android:layout_width="fill_parent" android:id="@+id/frameLayout1" android:layout_height="fill_parent">
        <ListView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="left|fill_horizontal" android:id="@+id/PostList" android:scrollingCache="false" android:smoothScrollbar="false" android:footerDividersEnabled="true" android:fadingEdge="none" android:layout_marginBottom="50sp"></ListView>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/LinearLayout01" android:layout_gravity="bottom">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:layout_marginRight="2dp" android:id="@+id/ReloadButton" android:text="@string/reload"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:layout_marginRight="2dp" android:id="@+id/ReloadUnreadButton" android:text="@string/unreload"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:layout_marginRight="2dp" android:id="@+id/NextPage" android:text="@string/next_page"></Button>
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:text="TextView" android:layout_height="wrap_content" android:id="@+id/TextView01" android:visibility="invisible"></TextView>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:id="@+id/PostButton" android:text="投稿"></Button>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
